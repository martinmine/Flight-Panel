@page
@model AvinorStatusPanel.Pages.IndexModel
<html>
  <head>
    <title>Departures</title>
    <style>
      
      p.time {
        text-align: right;
        font-size: 95;
      }

      table.departures th {
        border-bottom: 4px solid white;
        text-align: left;
        vertical-align: bottom;
        padding-right: 20px;
      }
      
      table.departures td {
        color: rgb(255, 194, 51);
        white-space: nowrap;
        padding-right: 20px;
      }
      
      table.departures tr:nth-child(2n+3) {
        background: #001e3a;
      }
      
      table.departures {
        border-spacing: 0;
        font-size: 50;
        width: 100%;
      }

      body {
        background-color: rgb(0, 38, 73);
        font-family: 'Avinor Medium';
        color: white;
      }

    </style>
  </head>
  <body>
    <table class="departures">
      <tr>
        <th>Time</th>
        <th></th>
        <th>Flight</th>
        <th>Gate</th>
        <th style="width: 50%">Destination</th>
        <th style="width: 50%"><p class="time">@DateTime.Now.ToString("HH:mm")</p></th>
      </tr>

      @foreach (var row in Model.TableEntries)
      {
        <tr>
          <td>@row.Time</td>
          <td><img src="https://daisycon.io/images/airline/?width=140&height=60&color=002649&iata=@row.Iata"></td>
          <td>@row.Flight</td>
          <td>@row.Gate</td>
          <td>@row.Destination</td>
          <td>@row.Status</td>
        </tr>
      }
    </table>
  </body>
</html>
